<% icon_class = local_assigns[:text_icon].present? ? 'nav-item-icon--text' : nil %>

<li class="nav-item">
  <a href="<%= uri %>" class="nav-link">
    <div class="nav-item-icon <%= icon_class %>">
      <% if opts[:text_icon].present? %>
        <span><%= opts[:text_icon] %></span>
      <% elsif opts[:icon].present? %>
        <i class="fa fa-<%= opts[:icon] %>"></i>
      <% end %>
    </div>

    <%= title %>
  </a>
</li>

<% if yield.present? %>
  <ul class="nav flex-column">
    <%= yield %>
  </ul>
<% end %>
